          %button{:type => "button", :onclick => "closeHelper()"}Close
      #app_col
        #app_text
          %input{ :type => "text", :class => "choosetext greek", :id => "appBLresp_value", :size => "25"}
        #app_desc
          BL citation (vol.page), e.g.: 1.171
      #app_col
